<Window x:Class="InverseKinematicSingle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InverseKinematicSingle"
        mc:Ignorable="d"
        Title="Inverse kinematic" Height="400" Width="405.277">
    <Grid>
        <StackPanel Margin="10">
            <WrapPanel>
                <Label Content="Segments num:"/>
                <TextBox Name="tbSegments" Text="10" Width="50" HorizontalAlignment="Left" Margin="5" TextChanged="tbSegments_TextChanged"/>
                <local:DrawingVisualClass x:Name="g" HorizontalAlignment="Center" Width="379" Background="Black" Height="302" VerticalAlignment="Center" MouseMove="g_MouseMove" PreviewTextInput="g_PreviewTextInput"/>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
